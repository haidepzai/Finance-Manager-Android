<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="#606060"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="X"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/logoPurpose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_info"
            android:padding="2dp" />

        <EditText
            android:id="@+id/inputPurpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/logoPurpose"
            android:hint="Was?"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/logoAmount"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/logoPurpose"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_euro"
            android:padding="2dp" />

        <EditText
            android:id="@+id/inputAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputPurpose"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/logoAmount"
            android:hint="Wie viel?"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logoDate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/logoAmount"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_date"
            android:padding="2dp" />

        <TextView
            android:id="@+id/inputDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputAmount"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="160dp"
            android:layout_toEndOf="@+id/logoDate"
            android:hint="Wann?"
            android:inputType="date"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logoMethod"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_credit"
            android:layout_below="@id/logoDate"
            android:padding="2dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/inputMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputDate"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="240dp"
            android:layout_toEndOf="@+id/logoMethod"
            android:hint="Zahlungsmethode?"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addBill"
            android:layout_below="@id/logoMethod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:text="HinzufÃ¼gen"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </RelativeLayout>

</LinearLayout>