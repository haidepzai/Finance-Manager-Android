<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BarChartActivity"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        app:layout_constraintBottom_toTopOf="@+id/barChartView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:background="@color/gray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewGrocery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font"
            android:padding="10dp"
            android:text="Einkauf: "
            android:textAlignment="center"
            android:textSize="14dp"
            android:textColor="@color/lime"/>

        <TextView
            android:id="@+id/textViewFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Essen: "
            android:padding="10dp"
            android:fontFamily="@font/font"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/light_blue"/>

        <TextView
            android:id="@+id/textViewEducation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studium/Beruf: "
            android:padding="10dp"
            android:fontFamily="@font/font"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/textViewLeisure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Freizeit: "
            android:padding="10dp"
            android:fontFamily="@font/font"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/cyan"/>

        <TextView
            android:id="@+id/textViewFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GebÃ¼hren: "
            android:padding="10dp"
            android:fontFamily="@font/font"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/magenta"/>


        <TextView
            android:id="@+id/textViewLMisc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sonstige: "
            android:fontFamily="@font/font"
            android:padding="10dp"
            android:textSize="14dp"
            android:textAlignment="center"
            android:textColor="@color/yellow"/>

    </LinearLayout>

    <TextView
        android:id="@+id/totalAmountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:text="Gesamt:"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />


    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/totalAmountView"
        app:layout_constraintTop_toBottomOf="@+id/totalAmountView" />

    <de.hdmstuttgart.financemanager.View.BarChartView
        android:id="@+id/barChartView"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalAmount"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/yAxisMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.339" />

    <TextView
        android:id="@+id/yAxisHalf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.617" />

</androidx.constraintlayout.widget.ConstraintLayout>